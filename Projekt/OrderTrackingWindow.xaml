<Window x:Class="Projekt.OrderTrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="Śledzenie Zamówień" Height="450" Width="800">
    <Grid>
        <ListView x:Name="OrdersListView" Margin="10" Grid.Row="0" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding OrderId}"/>
                    <GridViewColumn Header="Data" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Produkty" DisplayMemberBinding="{Binding Products}"/>
                    <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding TotalPrice}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
